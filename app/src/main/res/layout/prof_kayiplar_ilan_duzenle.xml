<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:padding="10dp"
    tools:context=".Kayıplar.KayıplarİlanVerActivity"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/son">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/prgrsbr"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="129dp"
                    android:layout_height="139dp"
                    android:layout_alignStart="@+id/prof_kayiplar_ilan_düzenle_ilan_foto"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="36sp" />

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/prof_kayiplar_ilan_düzenle_ilan_foto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    app:siRadius="10dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/ilan_hareketleri" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:text="İsmi:"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_isim_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Kaybolan hayvanın ismini yazın"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginBottom="5sp"
                    android:text="Kaybolduğu Tarih:"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_tarihtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Kaybolduğu tarihi seçin"
                    android:inputType="textPersonName"
                    android:padding="10sp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:orientation="horizontal"
                    android:paddingTop="2sp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2sp"
                        android:text="Yaşı:"
                        android:layout_marginBottom="5sp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/profilim_kayiplar_ilan_düzenle_yas_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/edittext_dikdortgen"
                android:hint="Yaşı"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:orientation="horizontal"
                    android:paddingTop="2sp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2sp"
                        android:text="Cinsiyeti:"
                        android:layout_marginBottom="5sp"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_cinsiyet_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Cinsiyeti"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:orientation="horizontal"
                    android:paddingTop="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2sp"
                        android:text="Kaybolduğu İl:"
                        android:layout_marginBottom="5sp"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_il_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Kaybolduğu İl"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="2sp"
                    android:orientation="horizontal"
                    android:paddingTop="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İlçe:"
                        android:layout_marginBottom="5sp"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_ilce_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Kaybolduğu İlçe"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginBottom="5sp"
                    android:text="Açıklama:"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_açıklamatext"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Hayvanınız hakkında birşeyler yazın"
                    android:padding="10sp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginBottom="5sp"
                    android:text="İletişim:"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/profilim_kayiplar_ilan_düzenle_iletişim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="İletişim bilgilerinizi girin"
                    android:inputType="textPersonName"
                    android:padding="10sp"
                    android:textSize="16sp" />
            </LinearLayout>


            <Button
                android:id="@+id/profilim_kayiplar_ilan_düzenle_ilanEkle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="50sp"
                android:background="@drawable/edittext_dikdortgen"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="kayiplarİlanDüzenle"
                android:text="Kaydet"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="OnClick" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>