<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:padding="10dp"
    tools:context=".Sahiplen.SahiplendirmeİlanVerActivity"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/prof_sahiplendirme_ilan_düzenle_foto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    app:siRadius="10dp"/>

                <ProgressBar
                    android:id="@+id/prgrbsrS"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="129dp"
                    android:layout_height="139dp"
                    android:layout_alignStart="@+id/prof_kayiplar_ilan_düzenle_ilan_foto"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="36sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yaşı:"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <EditText
                    android:id="@+id/prof_sahiplendirme_yas_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Yaşı"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cinsiyeti:"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/prof_sahiplendirme_icinsiyeti_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/edittext_dikdortgen"
                android:hint="Cinsiyeti"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İl:"
                        android:textColor="@color/colorAccent" />


                </LinearLayout>

                <EditText
                    android:id="@+id/prof_sahiplendirme_il_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="İl"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İlçe:"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <EditText
                    android:id="@+id/prof_sahiplendirme_ilçe_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="İlçe"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginBottom="5sp"
                    android:text="İsmi:"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/prof_sahiplendirme_isim_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Eğer biliyorsanız hayvanın ismini girin"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="5sp"
                    android:text="Açıklama:"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/prof_sahiplendirme_açıklamatext"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="Neden sahiplendirmek istiyorsunuz?"
                    android:padding="10sp"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="5sp"
                    android:text="İletişim:"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/prof_sahiplendirme_iletişim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edittext_dikdortgen"
                    android:hint="İletişim bilgilerinizi girin"
                    android:inputType="textPersonName"
                    android:padding="10sp" />
            </LinearLayout>

            <Button
                android:id="@+id/prof_sahiplendirme_ilanEkle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="50sp"
                android:background="@drawable/edittext_dikdortgen"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="sahiplendirmeİlanDüzenle"
                android:text="Kaydet"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="OnClick" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>