<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/animasyon">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/soru_cevap_soru_başlığıText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="15sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_dikdortgen"
                android:hint="Soru başlığı yazınız."
                android:inputType="textPersonName"
                android:paddingLeft="4sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/soru_cevap_soru_kategorisi_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/edittext_dikdortgen"></Spinner>

            <Spinner
                android:id="@+id/soru_cevap_soru_hayvan_türü_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/edittext_dikdortgen"></Spinner>

            <Spinner
                android:id="@+id/soru_cevap_soru_hayvan_cinsi_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/edittext_dikdortgen"></Spinner>

            <EditText
                android:id="@+id/soru_cevap_sorunuzText"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edittext_dikdortgen"
                android:ems="10"
                android:hint="Sorunuzu detaylı bir şekilde açıklayınız."
                android:inputType="none"
                android:paddingLeft="4sp"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/edittext_dikdortgen"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="soruEkle"
                android:text="Soru Ekle"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/soru_sor_progressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="249dp"
        android:visibility="invisible"/>


</RelativeLayout>