<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="5sp"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/kayıplar_yorum_yorumSahibifoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="3sp"
                    android:layout_marginLeft="5sp" />

                <ProgressBar
                    android:id="@+id/kayıplar_yorumlar_progressbar"
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/kayıplar_yorum_yorumsahibi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="2sp"
                        android:onClick="yorumSahibininProfilineGit"
                        android:text="fgbb"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kayıplar_yorum_yapılanyorum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginTop="2sp"
                        android:text="ffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/kayıplar_yorum_yorumtarihi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="3sp"
                    android:text="TextView"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/yorumSil"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:onClick="yorumSil"
                android:visibility="invisible"
                app:srcCompat="@drawable/delete" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>