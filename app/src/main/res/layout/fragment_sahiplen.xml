<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/main2_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/edittext_dikdortgen"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="sahiplendirmeİlanVer"
        android:text="Yuva Arayan Hayvan İçin İlan Ekle"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Inverse"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/sahiplen_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/recyclerView_sahiplendirme"
        android:layout_alignBottom="@+id/recyclerView_sahiplendirme"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="214dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_sahiplendirme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main2_activity_button"
        android:layout_marginTop="0dp" />
</RelativeLayout>